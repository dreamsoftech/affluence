.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Affluence",root_path, :class => "brand"
      .nav-collapse
        %ul.nav
          %li{:class => "#{'active' if home?}"}
            %a{:href => "/home"} Home
          %li{:class => "#{'active' if events?}"}
            %a{:href => "/events"} Events
          %li{:class => "#{'active' if offers?}"}
            %a{:href => "/offers"} Offers
          %li{:class => "#{'active' if gives?}"}
            %a{:href => "#"} Gives
          - if current_user.superadmin?
            %li{:class => "#{'active' if gives?}"}
              %a{:href => "#{admin_dashboard_path}"} Dashboard
        %ul.nav.pull-right
          %li#menu1.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#menu1"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'Settings', edit_profile_path(current_user.permalink)
              %li
                = link_to 'Privacy', edit_privacy_profiles_path
              %li
                = link_to "Order History", orders_path
              %li.divider
              %li
                = link_to 'Sign Out', destroy_user_session_path, :method => :delete

  :javascript
    $(function(){
      $('.dropdown-toggle').dropdown();
    });
