          %input#input01.input-xlarge{:value => (current_user.profile.name if !current_user.profile.blank?), :type => "text"}
      .control-group
        %label.control-label Plan
        .controls
          %label.radio
            %input#optionsRadios2{:checked => "", :name => "optionsRadios", :type => "radio", :value => "Monthly"}
