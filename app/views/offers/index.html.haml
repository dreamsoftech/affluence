.row
  .span3
    .well
      %ul.nav.nav-list
        %li.nav-header Filter
        %li.active
          %a{:href => "#featured"}
            %i.icon-adjust>
            Featured
        %li
          %a{:href => "#travel"}
            %i.icon-plane>
            Travel
        %li
          %a{:href => "#services"}
            %i.icon-cog>
            Services
        %li
          %a{:href => "#financial"}
