.accordion-group
  .accordion-heading
    %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapseFour"}
      %h3 Change Password
  #collapseFour.accordion-body.collapse{:style => "height: 0px;  "}
    .accordion-inner
      #password
        = form_for(resource, :as => resource_name, :url => "/profiles/#{resource.profile.id}", :method => "put", :html => { :class => 'form-horizontal' }) do |f|
          %fieldset
            .control-group
              %label.control-label{:for => "input05"} Current Password
              .controls
                = f.password_field :current_password, :autocomplete => "off", :placeholder => '', :class => "input span3 #{@user.errors.has_key?(:current_password) ? 'error':''}"
            %hr
              .control-group
                %label.control-label{:for => "input05"} New Password
                .controls
                  = f.password_field :password, :autocomplete => "off", :placeholder => '', :class => "input span3 #{@user.errors.has_key?(:password) ? 'error':''}"
              .control-group
                %label.control-label{:for => "input05"} Verify New Password
                .controls
                  = f.password_field :password_confirmation, :autocomplete => "off", :placeholder => '', :class => "input span3 #{@user.errors.has_key?(:password) ? 'error':''}"
              .form-actions
                = f.submit "Save changes", :class => 'btn btn-primary'

      / password
    / accordion-inner
  / accordion-body
/ accordion-group