.accordion-group
  .accordion-heading
    %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapseFour"}
      %h3 Change Password
  #collapseFour.accordion-body.collapse{:style => "height: 0px; "}
    .accordion-inner
      #password
        %form.form-horizontal
          %fieldset
            .control-group
              %label.control-label{:for => "input05"} Current Password
              .controls
                %input.input.span3{:placeholder => "", :type => "text"}
            %hr
              .control-group
                %label.control-label{:for => "input05"} New Password
                .controls
                  %input.input.span3{:placeholder => "", :type => "text"}
              .control-group
                %label.control-label{:for => "input05"} Verify New Password
                .controls
                  %input.input.span3{:placeholder => "", :type => "text"}
              .form-actions
                %button.btn.btn-primary{:type => "submit"} Save changes
      / password
    / accordion-inner
  / accordion-body
/ accordion-group