    $(function() {
    //-------------------ajax autocomplete multiple values---------------------
      function split( val ) {
        return val.split( /,\s*/ );
      }
      function extractLast( term ) {
        return split( termÂ ).pop();
      }
      var url = null;
      $( ".ui-autocomplete-input" )
        // don't navigate away from the field on tab when selecting an item
        .bind( "keydown", function( event ) {
          if ( event.keyCode === $.ui.keyCode.TAB &&
              $( this ).data( "autocomplete" ).menu.active ) {
            event.preventDefault();
          }
        })
        .autocomplete({
          source: function( request, response ) {
            $.getJSON( "#{autocomplete_interest_name_profiles_path}", {
              term: extractLast( request.term )
            }, response );
          },
          search: function() {
            // custom minLength
            var term = extractLast( this.value );
            if ( term.length < 2 ) {
              return false;
            }
          },
          focus: function() {
            // prevent value inserted on focus
            return false;
          },
          select: function( event, ui ) {
            var terms = split( this.value );
            // remove the current input
            terms.pop();
            // add the selected item
            terms.push( ui.item.value );
            // add placeholder to get the comma-and-space at the end
            terms.push( "" );
            this.value = terms.join( ", " );
            return false;
          }
        });


      //------------------ajax selectmenu for states-------------------

        $("#profile_country").change(function(){
            $.get("#{states_of_country_path}", { country_code: $(this).val()}, function(data) {
              $("#profile_state").html('');
              if(data.length > 0) {
                $.each(data, function(index, val) {
                  $("#profile_state").append("<option value=" +val[1] + ">" +val[0] + "</option>")
                });
              } else {
                $("#profile_state").append("<option value=''>No States Available</option>")
              }
              
            });
        });
    }); 
  