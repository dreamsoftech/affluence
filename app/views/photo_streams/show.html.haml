= csrf_meta_tag

.span9
  .row
    .span7
      %h1
        %small= current_user.name+"'s" if !current_user.name.blank?
        Photo Stream
    .span2
      %p.pull-right
        %a.btn.btn-primary.btn-small{"data-toggle" => "modal", :href => "#new-photo"}
          %i.icon-picture.icon-white
          Post a Photo
  / row

  .row
    .span8
      = stylesheet_link_tag('jquery.fileupload-ui')
      
      = javascript_include_tag 'jquery.fileupload', 'jquery.fileupload-ui'
      %script{:charset => "utf-8", :type => "text/javascript"}
        $(function () {
        $('.upload').fileUploadUI({
        uploadTable:$('.upload_files'),
        downloadTable:$('.download_files'),
        buildUploadRow:function (files, index) {
        var file = files[index];
        return $('<tr><td>' + file.name + '<\/td>' +
        '<td class="file_upload_progress"><div><\/div><\/td>' +
        '<td class="file_upload_cancel">' +
        '<div class="ui-state-default ui-corner-all ui-state-hover" title="Cancel">' +
        '<span class="ui-icon ui-icon-cancel">Cancel<\/span>' +
        '<\/div><\/td><\/tr>');   },
        buildDownloadRow:function (file) {
        return $('<tr><td><a href="' + file.pic_path + '"> <img src="' + file.name + '"></a><a href="/users/#{current_user.id}/photo_streams/#{@photostream.id}/photo/' + file.id + '" data-method="delete" data-confirm="Are you sure?"method="delete">X</a>  <\/td><\/tr>');
        }
        });
        });
      .files
        = form_for @photo, :url => user_photo_stream_create_photo_path(current_user.id, @photostream), :html => {:class => "upload", :multipart => true} do |f|
          %input{:multiple => "", :name => "upload[image]", :type => "file"}
            %div Click here to upload Images
        %table.upload_files
        %table.download_files


      

  #myCarousel.carousel.slide
    .carousel-inner
      .item.active
        %img{:alt => "", :src => "http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-01.jpg"}
          .carousel-caption
            %h4
              First Thumbnail label
              %small 07/04/2011
            %p Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
      .item
        %img{:alt => "", :src => "http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-02.jpg"}
          .carousel-caption
            %h4
              Second Thumbnail label
              %small 07/04/2011
      .item
        %img{:alt => "", :src => "http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-03.jpg"}
          .carousel-caption
            %h4
              Third Thumbnail label
              %small 07/04/2011
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"} ‹
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"} ›
  / myCarousel
  %ul.thumbnails
    - @photostream.photos.reverse.each do |photo|
      %li.span3
        %a.thumbnail{:href => "#"}
          = image_tag photo.image.url(:medium)   

    
  %ul.pager
    %li.previous
      %a{:href => "#"} ← Newer
    %li.next
      %a{:href => "#"} Older →



#new-photo.modal.hide.fade{:style => "display: none; "}
  .modal-header
    %a.close{"data-dismiss" => "modal", :href => "#"} ×
    %h3 New Photo
  .modal-body
    - form_tag '', :html => {:class => "form-horizontal", :method => "post", :multipart => true} do
      %fieldset
        .control-group
          %label.control-label{:for => "fileInput"} Choose Photo
          .controls
            %input#fileInput.input-file{:type => "file"}
        .control-group
          %label.control-label{:for => "input01"} Title
          .controls
            <input type="text" class="input-xlarge" id="input01" data-provide="typeahead" data-input="5" data-source="["Blake Macleod","Doug Stukel","Michael Profita"]">
        .control-group
          %label.control-label{:for => "textarea"} Description
          .controls
            %textarea#textarea.input-xlarge{:rows => "3"}
        .form-actions
          %button.btn.btn-primary{:type => "submit"} Post

 