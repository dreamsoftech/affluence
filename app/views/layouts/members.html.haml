%html{:lang => "en"}
  %head
    = stylesheet_link_tag 'bootstrap', 'main'
    = javascript_include_tag :application

    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      #spinner
        {
          margin:33px 0;
          position:relative;
          width:800px;
          left:50%;

        }
      .ajax-loader
        {
          margin:0 7px;

        }
  %body
    = render 'shared/header'
    .container
      = render 'shared/flash_message'
      .row
        - if @profile_navigation
          = render 'shared/profile_navigation'
        = yield
      %hr
        %footer
          %p Â© Company 2012

