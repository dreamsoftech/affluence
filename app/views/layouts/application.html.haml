%html{:lang => "en"}
  %head
    = stylesheet_link_tag    "bootstrap"
    = javascript_include_tag :application

    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      #spinner
        {
          margin:33px 0;
          position:relative;
          width:800px;
          left:50%;

        }
      .ajax-loader
        {
          margin:0 7px;

        }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Affluence",root_path, :class => "brand"
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "/home"} Home
              %li
                %a{:href => "/event"} Events
              %li
                %a{:href => "./offers.html"} Offers
              %li
                %a{:href => "./gives.html"} Gives
            %ul.nav.pull-right
              %li#menu1.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#menu1"}
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "./settings.html"} Settings
                  %li
                    %a{:href => "./privacy.html"} Privacy
                  %li
                    %a{:href => "./orders.html"} Order History
                  %li.divider
                  %li
                    = link_to 'Sign Out', destroy_user_session_path, :method => :delete
    .container
      .row
        - if @profile_navigation
          = render 'shared/profile_navigation'
        = yield
      %hr
        %footer
          %p Â© Company 2012

