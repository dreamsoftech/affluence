- @latest_activities.each do |activity|
  %tr
    %td.span1
      %a.thumbnail{"data-original-title" => "#{activity.user.profile.name}", "data-placement" => "bottom", :href => "#{profile_path(activity.user.permalink)}", :rel => "tooltip"}
        = display_image(activity.user.profile.photos, :thumb)
    %td
      %h5= activity.user.profile.name
      %p
        = activity.body
    %td
      %p= time_ago_in_words(activity.updated_at) + " ago"

:javascript
  $(function () {
    $('a[rel=tooltip]').tooltip({
        live: true
    });
  });

